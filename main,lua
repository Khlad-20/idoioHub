        speedButton.BackgroundColor3 = Color3.fromRGB(255, 80, 80)
    else
        speedButton.Text = "🏃 تفعيل السرعة"
        speedButton.BackgroundColor3 = Color3.fromRGB(60, 60, 80)
    end
end)

